<div class="container">

    <div class="jumbotron">
        <h1>Eat Da Burger! </h1>
        <br>
        <h2>Select a Burger to Eat</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger"></label>
                    {{!-- <input type="text" id="newburger" name="burger"> --}}
                    <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Select a burger</option>
                        <option value="hamburger">hamburger</option>
                        <option value="cheeseBurger">cheeseburger</option>
                        <option value="baconburger">baconburger</option>
                        <option value="beyondburger">beyondburger</option>
                        <option value="mushroomburger">mushroomburger</option>
                        <option value="avocadoburger">avocadoburger</option>
                    </select>

                    <button type="submit" class="btn btn-success" id="addburger">Add to waiting to be devoured list
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside">
                    <h2>Waiting to be Devoured</h2>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span>Devour it!</span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside">
                    <h2>Devoured</h2>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>
<!--endcontainer -->